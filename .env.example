# Environment variables template
# Copy this file to .env and fill in your actual values

# =============================================================================
# PROVEDORES DE LLM - Configure apenas UM provedor
# =============================================================================

# OpenAI (GPT-3.5, GPT-4, GPT-4o)
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini
# Obtenha sua chave em: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=AIza-your-google-api-key-here

# Groq (Llama2, Mixtral, Gemma)
# Obtenha sua chave em: https://console.groq.com/keys
GROQ_API_KEY=gsk_your-groq-api-key-here

# Anthropic (Claude) - Suporte futuro
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Azure OpenAI - Suporte futuro
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# =============================================================================
# GOOGLE CALENDAR (Opcional)
# =============================================================================

# Configuração para Service Account
GOOGLE_PROJECT_ID=seu-projeto-google-cloud
GOOGLE_CLIENT_EMAIL=seu-service-account@projeto.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSua-chave-privada-aqui\n-----END PRIVATE KEY-----\n"
GOOGLE_CALENDAR_ID=primary

# =============================================================================
# CONFIGURAÇÕES DO AGENT
# =============================================================================

# Provedor LLM preferido (openai, gemini, groq, mock)
ADK_LLM_PROVIDER=mock

# Modelo específico (opcional)
# Para OpenAI: gpt-3.5-turbo, gpt-4, gpt-4-turbo, gpt-4o
# Para Gemini: gemini-pro, gemini-1.5-pro
# Para Groq: llama2-70b-4096, mixtral-8x7b-32768, gemma-7b-it
ADK_LLM_MODEL=

# Configurações de geração
ADK_TEMPERATURE=0.7
ADK_MAX_TOKENS=1000

# =============================================================================
# CONFIGURAÇÕES DA BARBEARIA
# =============================================================================

BARBERSHOP_NAME=Barbearia do João
BARBERSHOP_TIMEZONE=America/Sao_Paulo
BARBERSHOP_PHONE=+5511999999999
BARBERSHOP_ADDRESS=Rua das Flores, 123 - São Paulo, SP
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# ===== Monitoring =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ===== External Services =====
WEBHOOK_URL=
NOTIFICATION_EMAIL=
SLACK_WEBHOOK=

# ===== Storage =====
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ===== Development =====
JUPYTER_PORT=8888
API_PORT=8000
